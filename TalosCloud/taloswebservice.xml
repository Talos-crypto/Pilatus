  <target name="compile.module.taloswebservice" depends="compile.module.taloswebservice.production,compile.module.taloswebservice.tests" description="Compile module TalosWebService"/>
  
  <target name="compile.module.taloswebservice.production" description="Compile module TalosWebService; production classes">
    <mkdir dir="${taloswebservice.output.dir}"/>
    <javac destdir="${taloswebservice.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
      <compilerarg line="${compiler.args.taloswebservice}"/>
      <bootclasspath refid="taloswebservice.module.bootclasspath"/>
      <classpath refid="taloswebservice.module.production.classpath"/>
      <src refid="taloswebservice.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.taloswebservice"/>
    </javac>
    
    <copy todir="${taloswebservice.output.dir}">
      <fileset dir="${module.taloswebservice.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.taloswebservice.tests" depends="compile.module.taloswebservice.production" description="compile module TalosWebService; test classes" unless="skip.tests"/>
  
